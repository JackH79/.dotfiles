### COLOUR CODE SUBSTITUTION
SET Esc CHAR(27)
SET Def   Esc + "[0m"
SET Blk   Esc + "[0;30m"
SET Red   Esc + "[0;31m"
SET Gre   Esc + "[0;32m"
SET Yel   Esc + "[0;33m"
SET Blu   Esc + "[0;34m"
SET Mag   Esc + "[0;35m"
SET Cya   Esc + "[0;36m"
SET Whi   Esc + "[0;37m"
SET BrBlk Esc + "[1;30m"
SET BrRed Esc + "[1;31m"
SET BrGre Esc + "[1;32m"
SET BrYel Esc + "[1;33m"
SET BrBlu Esc + "[1;34m"
SET BrMag Esc + "[1;35m"
SET BrCya Esc + "[1;36m"
SET BrWhi Esc + "[1;37m"
